<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shu"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/b8"
        android:label="@string/main"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:label="@string/main"
            android:name=".BreadHouseActivity"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MakeCakeActivity"
            android:label="@string/make_cake"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="make" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="makefood" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MakePizzaActivity"
             android:label="@string/make_pizza"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="make" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="makefood" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MakeBreadActivity"
             android:label="@string/make_bread"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="make" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="makefood" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SaleCakeActivity"
            android:label="@string/sale_cake"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="sale" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="salefood" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SalePizzaActvity"
            android:label="@string/sale_pizza"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="sale" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="salefood" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SaleBreadActivity"
            android:label="@string/sale_bread"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="sale" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="salefood" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CountActivity"
            android:label="@string/count"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name=".EditActivity"
            android:label="@string/edit_activity"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name=".DropActivity"
            android:label="@string/drop"
            android:launchMode="singleTop" >
        </activity>
        <activity 
            android:name=".DisplayActivity" 
            android:label="@string/display">
        </activity>
    
    </application>

</manifest>
